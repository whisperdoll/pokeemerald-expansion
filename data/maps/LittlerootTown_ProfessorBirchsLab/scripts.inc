LittlerootTown_ProfessorBirchsLab_MapScripts::
	.byte 0


LittlerootTown_ProfessorBirchsLab_EventScript_SinglesAttendant::
	lock
	faceplayer
	message LittlerootTown_ProfessorBirchsLab_EventScript_SinglesAttendant_Text_0
	waitmessage
	multichoice 17, 6, MULTI_CHALLENGEINFO, FALSE
	closemessage
	switch VAR_RESULT
	case 0, LittlerootTown_ProfessorBirchsLab_EventScript_SinglesAttendant_2
	case 1, LittlerootTown_ProfessorBirchsLab_EventScript_SinglesAttendant_3
	case 2, LittlerootTown_ProfessorBirchsLab_EventScript_SinglesAttendant_4
	case MULTI_B_PRESSED, LittlerootTown_ProfessorBirchsLab_EventScript_SinglesAttendant_4
	return

LittlerootTown_ProfessorBirchsLab_EventScript_SinglesAttendant_2:
	call LittlerootTown_ProfessorBirchsLab_TryEnterSinglesChallenge
	return

LittlerootTown_ProfessorBirchsLab_EventScript_SinglesAttendant_3:
	call LittlerootTown_ProfessorBirchsLab_ExplainSinglesChallenge
	return

LittlerootTown_ProfessorBirchsLab_EventScript_SinglesAttendant_4:
	call LittlerootTown_ProfessorBirchsLab_CancelChallenge
	return


LittlerootTown_ProfessorBirchsLab_TryEnterSinglesChallenge::
	setflag FLAG_SYS_POKEMON_GET
	setflag FLAG_RESCUED_BIRCH
	fadescreen FADE_TO_BLACK
	special ChooseStarter
	waitstate
	fadescreen FADE_FROM_BLACK
	applymovement 1, LittlerootTown_ProfessorBirchsLab_Movement_WalkToElevator
	applymovement OBJ_EVENT_ID_PLAYER, LittlerootTown_ProfessorBirchsLab_Movement_WalkToElevator
	waitmovement 0
	opendoor 12, 1
	waitdooranim
	applymovement 1, LittlerootTown_ProfessorBirchsLab_Movement_AttendantEnterElevator
	applymovement OBJ_EVENT_ID_PLAYER, LittlerootTown_ProfessorBirchsLab_Movement_PlayerEnterElevator
	waitmovement 0
	closedoor 12, 1
	waitdooranim
	warp MAP_BATTLE_FRONTIER_BATTLE_TOWER_ELEVATOR, 255, 1, 6
	waitstate
	return


LittlerootTown_ProfessorBirchsLab_CancelChallenge::
	msgbox LittlerootTown_ProfessorBirchsLab_CancelChallenge_Text_0
	release
	return


LittlerootTown_ProfessorBirchsLab_ExplainSinglesChallenge::
	msgbox LittlerootTown_ProfessorBirchsLab_ExplainSinglesChallenge_Text_0
	release
	return


LittlerootTown_ProfessorBirchsLab_Movement_WalkToElevator:
	walk_up
	walk_up
	walk_up
	step_end

LittlerootTown_ProfessorBirchsLab_Movement_AttendantEnterElevator:
	walk_up
	set_invisible
	step_end

LittlerootTown_ProfessorBirchsLab_Movement_PlayerEnterElevator:
	walk_up
	walk_up
	set_invisible
	step_end

LittlerootTown_ProfessorBirchsLab_EventScript_SinglesAttendant_Text_0:
	.string "Do you want to do the singles?$"

LittlerootTown_ProfessorBirchsLab_CancelChallenge_Text_0:
	.string "Ok sorry$"

LittlerootTown_ProfessorBirchsLab_ExplainSinglesChallenge_Text_0:
	.string "Later$"
